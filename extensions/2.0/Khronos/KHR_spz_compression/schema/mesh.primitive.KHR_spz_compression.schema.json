{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "KHR_spz_compression primitive extension",
    "type": "object",
    "description": "Compressed data for SPZ primitive.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "spzBuffer": {
            "type": "integer",
            "description": "The index of the buffer containing the compressed data.",
            "minimum": 0
        },
        "numPoints": {
            "type": "integer",
            "description": "The number of gaussians.",
            "minimum": 1
        },
        "shDegree": {
            "type": "integer",
            "description": "The degree of the spherical harmonics.",
            "minimum": 0,
            "maximum": 3,
            "default": 0
        },
        "fractionalBits": {
            "type": "integer",
            "description": "The number of fractional bits.",
            "minimum": 0,
            "maximum": 16,
            "default": 12
        },
        "flags": {
            "type": "integer",
            "description": "The flags for the compressed data.",
            "default": 0
        },
        "version": {
            "type": "integer",
            "description": "The version of the SPZ algorithm.",
            "default": 2
        },
        "extensions": { },
        "extras": { }
    }
}
