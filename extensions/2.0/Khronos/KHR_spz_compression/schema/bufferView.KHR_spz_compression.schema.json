{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "KHR_spz_compression bufferView extension",
    "type": "object",
    "description": "Compressed data for bufferView.",
    "allOf": [ { "$ref": "glTFProperty.schema.json" } ],
    "properties": {
        "buffer": {
            "allOf": [ { "$ref": "glTFid.schema.json" } ],
            "description": "The index of the buffer with compressed data."
        },
        "byteOffset": {
            "type": "integer",
            "description": "The offset into the buffer in bytes.",
            "minimum": 0,
            "default": 0
        },
        "byteLength": {
            "type": "integer",
            "description": "The length of the compressed data in bytes.",
            "minimum": 1
        },
        "byteStride": {
            "type": "integer",
            "description": "The stride, in bytes.",
            "minimum": 2,
            "maximum": 256
        },
        "numPoints": {
            "type": "integer",
            "description": "The number of gaussians.",
            "minimum": 1
        },
        "shDegree": {
            "type": "integer",
            "description": "The degree of the spherical harmonics.",
            "minimum": 0,
            "maximum": 3,
            "default": 0
        },
        "fractionalBits": {
            "type": "integer",
            "description": "The number of fractional bits.",
            "minimum": 0,
            "maximum": 16,
            "default": 12
        },
        "flags": {
            "type": "integer",
            "description": "The flags for the compressed data.",
            "default": 0
        },
        "extensions": { },
        "extras": { }
    },
    "required": [
        "buffer", "byteLength", "byteStride", "numPoints"
    ]
}
