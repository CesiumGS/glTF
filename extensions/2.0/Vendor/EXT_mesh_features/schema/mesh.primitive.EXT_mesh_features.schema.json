{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "mesh.primitive.EXT_mesh_features.schema.json",
    "title": "EXT_mesh_features glTF Mesh Primitive extension",
    "type": "object",
    "description": "Feature identification on a mesh primitive.",
    "allOf": [
        {
            "$ref": "glTFProperty.schema.json"
        }
    ],
    "properties": {
        "featureIds": {
            "type": "array",
            "description": "An array of feature ID attributes or feature ID textures assigned to the primitive.",
            "items": {
                "$ref": "featureId.schema.json"
            },
            "minItems": 1
        },
        "extensions": {},
        "extras": {}
    },
    "required": [
        "featureIds"
    ]
}